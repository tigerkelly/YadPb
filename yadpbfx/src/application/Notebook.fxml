<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="aPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NotebookController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Notebook" textFill="BLUE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnGeneral" mnemonicParsing="false" onAction="#doGeneral" text="General">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox>
               <children>
                  <HBox>
                     <children>
                        <TableView fx:id="tblTabs" editable="true" prefHeight="300.0" prefWidth="525.0">
                          <columns>
                            <TableColumn fx:id="colText" prefWidth="150.0" text="Text" />
                            <TableColumn fx:id="colIcon" prefWidth="150.0" text="Icon" />
                              <TableColumn fx:id="colTooltip" prefWidth="200.0" text="Tooltip" />
                          </columns>
                        </TableView>
                        <VBox prefWidth="250.0" spacing="4.0">
                           <children>
                              <Label text="Text:">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtTabText">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <Label text="Icon:">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <HBox>
                                 <children>
                                    <ComboBox fx:id="cbTabIcon" prefWidth="175.0" style="-fx-font-size: 14px;" />
                                 </children>
                              </HBox>
                              <Label text="Tooltip:">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtTabTooltip">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="4.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <Button fx:id="btnTabAdd" mnemonicParsing="false" onAction="#doTabAdd" prefWidth="110.0" text="Add">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Button>
                                    <Button fx:id="btnTabDelete" mnemonicParsing="false" onAction="#doTabDelete" prefWidth="110.0" text="Delete">
                                       <font>
                                          <Font size="14.0" />
                                       </font>
                                    </Button>
                                 </children>
                                 <padding>
                                    <Insets bottom="4.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="4.0" style="-fx-font-size: 14px;">
               <children>
                  <Label prefWidth="65.0" text="Key:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtKey" onKeyTyped="#onKey" prefWidth="100.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Label text="Tab Position:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cbTabPosition" onAction="#doTabPosition" prefWidth="100.0" />
                  <Label text="Tab Borders:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtTabBorders" onKeyTyped="#onTabBorders" prefWidth="75.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
                  <Label text="Active Tab:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtActiveTab" onKeyTyped="#onActiveTab" prefWidth="75.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
